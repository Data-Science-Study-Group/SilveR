@model SilveR.StatsModels.PValueAdjustmentDatasetBasedInputsModel

@section Scripts {
    <script>
        var theModel = @Html.Raw(Json.Serialize(Model));
    </script>

    <environment names="Development">
        <script defer src="~/js/stats/pValueAdjustmentDatasetBasedInputs.js"></script>
        <script defer src="~/js/openLinks.js"></script>
    </environment>
    <environment names="Production">
        <script defer src="~/js/stats/pValueAdjustmentDatasetBasedInputs.min.js"></script>
    </environment>
}

@{
    ViewBag.Title = "P-value Adjustment (Dataset Based Inputs)";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-md-6">
        <a href="#" onclick="openItem('http://invivostat.co.uk/wp-content/user-guides-v4/P-value_adjustment.pdf')" class="btn btn-info pull-right">Help</a>
    </div>
</div>

<form action="/Analyses/PValueAdjustmentDatasetBasedInputs" class="form-horizontal mt-2" method="post">

    @await Html.PartialAsync("AnalysisErrors")

    <input asp-for="DatasetID" hidden />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-6 col-form-label">Unadjusted p-values</label>
                <div class="col-md-6">
                    <input class="form-control" asp-for="PValues" />
                    <div><span asp-validation-for="PValues"></span></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-6 col-form-label">Dataset labels</label>
                <div class="col-md-6">
                    <input class="form-control" asp-for="DatasetLabels" />
                    <div><span asp-validation-for="DatasetLabels"></span></div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-6 col-form-label">Multiple comparison adjustment</label>
                <div class="col-md-6">
                    <input asp-for="SelectedTest" />
                    <div><span asp-validation-for="SelectedTest"></span></div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-6 col-form-label">Significance level</label>
                <div class="col-md-6">
                    <input asp-for="Significance" />
                    <div><span asp-validation-for="Significance"></span></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-md-12 text-right">
            <button class="btn btn-primary btn-lg" type="submit">Submit <i class="fa fa-caret-right"></i></button>
        </div>
    </div>
</form>