@model SilveR.StatsModels.OneSampleTTestAnalysisModel

@section Scripts {

    <script>
        var theModel = @Html.Raw(Json.Serialize(Model));
    </script>

    <environment names="Development">
        <script defer src="~/js/stats/oneSampleTTestAnalysis.js"></script>
    </environment>
    <environment names="Production">
        <script defer src="~/js/stats/oneSampleTTestAnalysis.min.js"></script>
    </environment>
}

@{
    ViewBag.Title = "One-Sample t-test Analysis";
}

<h2>@ViewBag.Title</h2>

<form action="/Analyses/OneSampleTTestAnalysis" class="form-horizontal" method="post">

    @await Html.PartialAsync("AnalysisErrors")

    <input asp-for="DatasetID" type="hidden" />

    <div class="row">
        <div class="col-sm-6">

            <div class="panel panel-default">
                <div class="panel-heading">Input Options</div>
                <div class="panel-body">
                    <h4>Response</h4>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Response</label>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="Responses"></select>
                            <div><span asp-validation-for="Responses"></span></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Reponse transformation</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ResponseTransformation" />
                            <div><span asp-validation-for="ResponseTransformation"></span></div>
                        </div>
                    </div>
                    <br />

                    <h4>Test value</h4>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Test value</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="TestValue" />
                            <div><span asp-validation-for="TestValue"></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">Output Options</div>
                <div class="panel-body">
                    <h4>Overall Results</h4>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Confidence interval</label>
                        <div class="col-sm-6">
                            <input class="checkbox" asp-for="ConfidenceInterval" type="checkbox" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Normal probability plot</label>
                        <div class="col-sm-6">
                            <input class="checkbox" asp-for="NormalPlot" type="checkbox" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Significance level</label>
                        <div class="col-sm-6">
                            <input class="form-control" asp-for="Significance" />
                            <div><span asp-validation-for="Significance"></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt20">
        <div class="col-md-12">
            <button class="btn btn-primary btn-lg" type="submit">Submit</button>
        </div>
    </div>
</form>