@model SilveRModel.StatsModel.SummaryStatsModel

@section Scripts {
    <script>
        var theModel = @Html.Raw(Json.Serialize(Model));
    </script>

    <environment names="Development">
        <script src="~/js/stats/summaryStatistics.js"></script>
    </environment>
    <environment names="Production">
        <script src="~/js/stats/summaryStatistics.min.js"></script>
    </environment>
}

@{
    ViewBag.Title = "Summary Statistics";
}

<h2>@ViewBag.Title</h2>

<form action="/Analyses/SummaryStatistics" class="form-horizontal" method="post">

    @if (ViewBag.HasError == true)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong>
            <br />
            @Html.ValidationSummary(false)
        </div>
    }
    else if (ViewBag.HasWarnings == true)
    {
        <div class="alert alert-warning">
            <strong>Warning!</strong>
            <br />
            @ViewBag.WarningMessages
            <br />
            <br />
            <button class="btn btn-warning" name="submitButton" type="submit" value="SubmitAnyway">Submit Anyway</button>
        </div>
    }
    <input asp-for="DatasetID" hidden />

    <div class="row">
        <div class="col-sm-6">
            <h3>Input</h3>
            <h4>Responses</h4>
            <div class="form-group">
                <label class="col-sm-4 control-label">Responses</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Responses"></select>
                </div>
                <span asp-validation-for="Responses"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Transformation</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Transformation" />
                </div>
                <span asp-validation-for="Transformation"></span>
            </div>
            <br />

            <h4>Categorisation Factors</h4>
            <div class="form-group">
                <label class="col-sm-4 control-label">1st factor</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FirstCatFactor" />
                </div>
                <span asp-validation-for="FirstCatFactor"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">2nd factor</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="SecondCatFactor" />
                </div>
                <span asp-validation-for="SecondCatFactor"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">3rd factor</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ThirdCatFactor" />
                </div>
                <span asp-validation-for="ThirdCatFactor"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">4th factor</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FourthCatFactor" />
                </div>
                <span asp-validation-for="FourthCatFactor"></span>
            </div>
        </div>

        <div class="col-sm-6">
            <h3>Summary Results</h3>
            <div class="form-group">
                <label class="col-sm-6 control-label">Mean</label>
                <div class="col-sm-6">
                    <input checked="checked" class="checkbox" asp-for="Mean" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Standard error of mean</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="StandardErrorOfMean" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Confidence interval</label>
                <div class="col-sm-6">
                    <input checked="checked" class="checkbox" asp-for="ConfidenceInterval" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">N</label>
                <div class="col-sm-6">
                    <input checked="checked" class="checkbox" asp-for="N" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Min and Max</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="MinAndMax" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Significance level</label>
                <div class="col-sm-6">
                    <input asp-for="Significance" style="width:40px" type="number" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Standard deviation</label>
                <div class="col-sm-6">
                    <input checked="checked" class="checkbox" asp-for="StandardDeviation" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Median and quartiles</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="MedianAndQuartiles" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Normal probability plot</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="NormalProbabilityPlot" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Variance</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="Variance" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">% coefficient of variation</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="CoefficientOfVariation" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">By categories and overall</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="ByCategoriesAndOverall" type="checkbox" />
                </div>
            </div>
        </div>
    </div>

    <div class="row mt20">
        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
    </div>
</form>