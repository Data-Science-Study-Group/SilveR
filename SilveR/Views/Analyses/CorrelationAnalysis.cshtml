@model SilveRModel.StatsModel.CorrelationAnalysisModel

@section Scripts {
    <script>
        var theModel = @Html.Raw(Json.Serialize(Model));
    </script>

    <environment names="Development">
        <script src="~/js/stats/correlationAnalysis.js"></script>
    </environment>
    <environment names="Production">
        <script src="~/js/stats/correlationAnalysis.min.js"></script>
    </environment>
}

@{
    ViewBag.Title = "Correlation Analysis";
}

<h2>@ViewBag.Title</h2>

<form action="/Analyses/CorrelationAnalysis" class="form-horizontal" method="post">

    @await Html.PartialAsync("AnalysisErrors")

    <input asp-for="DatasetID" hidden />

    <div class="row">
        <div class="col-sm-6">
            <h3>Input</h3>
            <h4>Responses</h4>
            <div class="form-group">
                <label class="col-sm-4 control-label">Responses</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Responses"></select>
                </div>
                <span asp-validation-for="Responses"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Transformation</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Transformation" />
                </div>
                <span asp-validation-for="Transformation"></span>
            </div>
            <br />

            <h4>Categorisation Factors</h4>
            <div class="form-group">
                <label class="col-sm-4 control-label">1st factor</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FirstCatFactor" />
                </div>
                <span asp-validation-for="FirstCatFactor"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">2nd factor</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="SecondCatFactor" />
                </div>
                <span asp-validation-for="SecondCatFactor"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">3rd factor</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ThirdCatFactor" />
                </div>
                <span asp-validation-for="ThirdCatFactor"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">4th factor</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FourthCatFactor" />
                </div>
                <span asp-validation-for="FourthCatFactor"></span>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Method</label>
                <div class="col-sm-8">
                    <input asp-for="Method" />
                    <span asp-validation-for="Method"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Hypothesis</label>
                <div class="col-sm-8">
                    <input asp-for="Hypothesis" />
                    <span asp-validation-for="Hypothesis"></span>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <h3>Results</h3>
            <div class="form-group">
                <label class="col-sm-6 control-label">Estimate</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="Estimate" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Statistic</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="Statistic" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">p-Value</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="PValue" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Scatterplot</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="Scatterplot" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Matrixplot</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="Matrixplot" type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Significance</label>
                <div class="col-sm-6">
                    <input asp-for="Significance" />
                    <span asp-validation-for="Significance"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">By categories and overall</label>
                <div class="col-sm-6">
                    <input class="checkbox" asp-for="ByCategoriesAndOverall" type="checkbox" />
                </div>
            </div>
        </div>
    </div>

    <div class="row mt20">
        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
    </div>
</form>