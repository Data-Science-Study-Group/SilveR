@model SilveRModel.Models.Analysis

@{
    ViewBag.Title = "View Results";
}
<br />

@if (ViewBag.HasError == true)
{
    <div class="alert alert-danger">
        <strong>Error!</strong>
        <br />
        @Html.ValidationSummary(false)
    </div>
}
else if (ViewBag.HasWarnings == true)
{
    <div class="alert alert-warning">
        <strong>Warning!</strong>
        <br />
        @ViewBag.WarningMessages
    </div>
}

<form method="post" action="~/Analyses/ViewResults">

    <input id="analysisGuid" name="analysisGuid" value="@Model.AnalysisGuid" hidden />

    <div class="row">
        <div class="col-sm-10 mt10">
            <button class="btn btn-info" name="submitButton" type="submit" value="ViewLog">View Analysis Log</button>
        </div>
        <div class="col-sm-2 mt10">
            <button class="btn btn-default" name="submitButton" type="submit" value="ReAnalyse">Re-analyse</button>
        </div>
    </div>
</form>

<div class="container">
    @Html.Raw(Model.HtmlOutput)
</div>