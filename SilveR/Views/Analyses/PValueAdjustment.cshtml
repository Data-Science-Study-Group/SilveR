@model SilveRModel.StatsModel.PValueAdjustmentModel

@section Scripts {
    <script>
        var theModel = @Html.Raw(Json.Serialize(Model));
    </script>

    <environment names="Development">
        <script src="~/js/stats/pValueAdjustment.js"></script>
    </environment>
    <environment names="Production">
        <script src="~/js/stats/pValueAdjustment.min.js"></script>
    </environment>
}

@{
    ViewBag.Title = "P-Value Adjustment";
}

<h2>@ViewBag.Title</h2>

<form action="/Analyses/PValueAdjustment" class="form-horizontal" method="post">

    @if (ViewBag.HasError == true)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong>
            <br />
            @Html.ValidationSummary(false)
        </div>
    }
    else if (ViewBag.HasWarnings == true)
    {
        <div class="alert alert-warning">
            <strong>Warning!</strong>
            <br />
            @ViewBag.WarningMessages
            <br />
            <br />
            <button class="btn btn-warning" name="submitButton" type="submit" value="SubmitAnyway">Submit Anyway</button>
        </div>
    }
    <input asp-for="DatasetID" hidden />

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="col-sm-4 control-label">Unadjusted p-Values</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="PValues" />
                    <div>Unadjusted p-values should be entered as comma separated values</div>
                </div>
                <span asp-validation-for="PValues"></span>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Multiple comparison adjustment</label>
                <div class="col-sm-8">
                    <input asp-for="SelectedTest" />
                </div>
                <span asp-validation-for="SelectedTest"></span>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Significance</label>
                <div class="col-sm-8">
                    <input asp-for="Significance" />
                </div>
                <span asp-validation-for="Significance"></span>
            </div>
        </div>
    </div>

    <div class="row mt20">
        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
    </div>
</form>