@model SilveR.StatsModels.UnpairedTTestAnalysisModel

@section Scripts {
    <script>
        var theModel = @Html.Raw(Json.Serialize(Model));
    </script>

    <environment names="Development">
        <script src="~/js/stats/unpairedTTestAnalysis.js"></script>
    </environment>
    <environment names="Production">
        <script src="~/js/stats/unpairedTTestAnalysis.min.js"></script>
    </environment>
}

@{
    ViewBag.Title = "Unpaired t-test Analysis";
}

<h2>@ViewBag.Title</h2>

<form action="/Analyses/UnpairedTTestAnalysis" class="form-horizontal" method="post">

    @await Html.PartialAsync("AnalysisErrors")

    <input asp-for="DatasetID" hidden />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">Input Options</div>
                <div class="panel-body">
                    <h4>Response</h4>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Response</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Response" />
                            <div><span asp-validation-for="Response"></span></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Response transformation</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ResponseTransformation" />
                            <div><span asp-validation-for="ResponseTransformation"></span></div>
                        </div>
                    </div>
                    <br />

                    <h4>Factor</h4>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Treatment</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Treatment" />
                            <div><span asp-validation-for="Treatment"></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">Output Options</div>
                <div class="panel-body">
                    <h4>Overall Results</h4>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Equal variance case</label>
                        <div class="col-sm-8">
                            <input class="checkbox" asp-for="EqualVarianceCaseSelected" type="checkbox" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Unequal variance case</label>
                        <div class="col-sm-8">
                            <input class="checkbox" asp-for="UnequalVarianceCaseSelected" type="checkbox" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Residuals vs. predicted plot</label>
                        <div class="col-sm-8">
                            <input class="checkbox" asp-for="ResidualsVsPredictedPlotSelected" type="checkbox" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Normal probability plot</label>
                        <div class="col-sm-8">
                            <input class="checkbox" asp-for="NormalProbabilityPlotSelected" type="checkbox" />
                        </div>
                    </div>
                    <br />

                    <h4>Post Hoc Tests</h4>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Control group</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ControlGroup" />
                            <div><span asp-validation-for="ControlGroup"></span></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Significance level</label>
                        <div class="col-sm-8">
                            <input asp-for="Significance" />
                            <div><span asp-validation-for="Significance"></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt20">
        <div class="col-md-12">
            <button class="btn btn-primary btn-lg" type="submit">Submit</button>
        </div>
    </div>
</form>